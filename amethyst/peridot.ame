amethyst Peridot_parser{
	root= defi*:a .* {a}
		
	defi = "def" "" name:name '(' ( ')' break | .:args[])*  expr:ary[] "end" @Def
	name = alpha:s alnum*:{s+it*""}
	
	atom = ""
       ( number
			 | '{' ('}' break | .:s[])* {CCode[s]}
			 | name:name '(' expr:ary[] ')' {Call[{:name=>name,:ary=>ary}]}
 		   | name:name {Var[{:name=>name}]}
			 )

	expr = atom:a ("+" atom:b {Call[{:name=>"plus",:ary=>[a,b]}]}:a)* {a}
}
